  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 1px;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
}

/* Add author names to all covers */
.product-image-inner::before {
  content: "BY J. AUTHERSON";
  position: absolute;
  top: 70px;
  left: 0;
  right: 0;
  font-size: 0.9rem;
  font-style: italic;
  letter-spacing: 1px;
}

/* Add decorative elements */
.manor-echo .decoration {
  position: absolute;
  top: 20px;
  left: 0;
  right: 0;
  height: 30px;
  background: linear-gradient(90deg, transparent, #8a6d3b, transparent);
  opacity: 0.6;
}

.clockmaker-dream .decoration {
  position: absolute;
  top: 20px;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(90deg, transparent, #f1c40f, transparent);
  opacity: 0.6;
}

.starfall-prophecies .decoration {
  position: absolute;
  top: 20px;
  left: 0;
  right: 0;
  height: 15px;
  background: radial-gradient(circle, #f1c40f 0%, transparent 70%);
  opacity: 0.4;
}

.whispering-ink .decoration {
  position: absolute;
  top: 20px;
  left: 0;
  right: 0;
  height: 30px;
  background: linear-gradient(90deg, transparent, #7f8c8d, transparent);
  opacity: 0.6;
}
</style>
