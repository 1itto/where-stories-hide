  right: 0;
  font-size: 1.2rem;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 1px;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
}

/* The Whispering Ink Cover */
.whispering-ink {
  background: linear-gradient(135deg, #3d3d3d, #1a1a1a);
  border: 15px solid #1e1e1e;
  border-top: 25px solid #1e1e1e;
  border-bottom: 25px solid #1e1e1e;
}

.whispering-ink::before {
  content: "üìú";
